<% content_for :page_title do %>
  <%= Spree.t(:yotpo_reviews_setting) %>
<% end %>

<%= form_with model: current_store, url: spree.admin_yotpo_settings_path, method: :put do |f| %>
  <div class="form-group">
    <%= f.label :yotpo_script, "Yotpo Script" %>
    <%= f.text_area :yotpo_script, class: "form-control", rows: 3 %>
  </div>

  <div class="form-group">
    <%= f.label :yotpo_enabled, "Enable" %>
    <%= f.check_box :yotpo_enabled %>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
